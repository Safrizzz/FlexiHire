rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile and public fields of others
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null
        && request.auth.uid == userId
        && !(request.resource.data.diff(resource.data).changedKeys().hasAny(['role']));
    }

    // Jobs: only employer who created can write; everyone can read
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.employerId == request.auth.uid;
      allow update: if request.auth != null && resource.data.employerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.employerId == request.auth.uid;
    }

    // Applications: applicant can create and update their own; employer can read for their jobs
    match /applications/{appId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.applicantId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.applicantId || // applicant can update (withdraw)
        // employer can update status for applications to their job
        exists(/databases/$(database)/documents/jobs/$(request.resource.data.jobId)) &&
        get(/databases/$(database)/documents/jobs/$(request.resource.data.jobId)).data.employerId == request.auth.uid
      );
    }

    // Transactions: only the owner can read/create their own entries
    match /transactions/{txId} {
      allow read, create, delete: if request.auth != null && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow update: if false;
    }

    // Employer ratings: students can create; anyone can read
    match /employer_ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.studentId == request.auth.uid;
      allow update: if false;
    }

    // Employee ratings: employers can create; anyone can read
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.employerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.employerId == request.auth.uid;
      allow update: if false;
    }

    // Chats/messages: participants can read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.resource.data.participants.hasAny([request.auth.uid]);
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}
